# Arg 1: The new package version
post_install() {
  _cols=`/usr/bin/tput cols`
  _line=`/usr/bin/printf -- "*%.0s" \`/usr/bin/seq 1 ${_cols}\``

  if ! command -v "yabause" >/dev/null 2>&1; then 
    /usr/bin/printf -- "${_line}\\n"
    /usr/bin/awk '{ printf "* " $0 "\n" }' <<EOF
Be sure to add /opt/emulators/yabause to your PATH environment variable!
EOF
    /usr/bin/printf -- "${_line}\\n"
  fi
}

# Arg 1: The new package version
# Arg 2: The old package version
post_upgrade() {
  post_install
}

# Local Variables:
# mode: sh
