# Maintainer: Israel Jacquez <mrkotfw@gmail.com>

_branch="master"
_realname=ssshell
_install_relpath="opt/tool-chains/sh2eb-elf"

pkgname="${_realname}"
pkgver=
pkgrel=1
pkgdesc="Sega Saturn Shell"
arch=('x86_64')
url="http://github.com/ijacquez/ssshell"
license=('MIT')
depends=("libftdi" "readline")
makedepends=("git" "meson" "ninja" "gcc" "libftdi" "readline")
options=('!strip' '!buildflags' '!makeflags' '!staticlibs' '!debug')
source=("${_realname}"::"git+https://github.com/ijacquez/ssshell#branch=${_branch}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_realname}"

  cat VERSION | tr -d '\n'
}

prepare() {
  cd "${srcdir}/${_realname}"
  meson -C --prefix "${pkgdir}/${_install_relpath}" build
}

build() {
  cd "${srcdir}/${_realname}"
  cd build
  ninja
}

package() {
  cd "${srcdir}/${_realname}"
  ninja install
}

# Local Variables:
# mode: sh
# sh-basic-offset: 2
# End:
