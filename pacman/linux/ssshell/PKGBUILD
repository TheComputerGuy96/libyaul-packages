# Maintainer: Israel Jacquez <mrkotfw@gmail.com>

_branch="master"
_realname=ssshell-git
_install_relpath="opt/tool-chains/sh2eb-elf"

pkgname="${_realname}"
pkgver=r2197.0f5f4c2
pkgrel=1
pkgdesc="An open source development kit for the SEGA Saturn"
arch=('x86_64')
url="http://github.com/ijacquez/ssshell"
license=('MIT')
depends=("libftdi" "readline")
makedepends=("git" "meson" "ninja" "gcc" "libftdi" "readline")
options=('!strip' '!buildflags' '!makeflags' '!staticlibs' '!debug')
source=("${_realname}"::"git+https://github.com/ijacquez/ssshell#branch=${_branch}")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_realname}"

  printf -- "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse HEAD | sed -r 's/(.{7}).*/\1/')"
}

prepare() {
  cd "${srcdir}/${_realname}"
}

build() {
  cd "${srcdir}/${_realname}"
}

package() {
  cd "${srcdir}/${_realname}"
}

# Local Variables:
# mode: sh
# sh-basic-offset: 2
# End:
